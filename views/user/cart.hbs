<section class="sty h-100" style="background-color: #eee;" >
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
        </div>
    <table style="background-color: ;white" class="table mt-5 form-outline flex-fill">
      <thead>
        <tr>
          <th  scope="col">Name</th>
          <th scope="col">Discription</th>
          <th scope="col">Price</th>
          <th scope="col">Image</th>
          <th scope="col">Quandity</th>
        </tr>

      </thead>
      <tbody >
        {{#each products}}
        <tr >
          {{#each this.products}}
          
          <td class="tb">{{this.Name}}</td>
          <td >{{this.Dis}}</td>
          <td class="tb">{{this.Price}} Rs</td>

          <td>
            <img style="width: 50px;height:50px;" src="./pdtImages/{{this._id}}.jpeg" alt="">
          </td>
          {{/each}}
          <td>
            <a href="/increment/{{this.item}}"> <button class="cart-item-count mr-3">+
              </button>
            </a>
            {{this.quandity}}<a href="/decrement/{{this.item}}"><button class="cart-item-count ml-3">-</button></a>
          </td>
          <td>
            <a href="/remove/{{this.item}}">
              <button type="button" onclick="return confirm('Are you sure to delete')"
                class="btn btn-danger">Remove</button>
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
    <hr>
      <div class="card mb-4">
          <div class="card-body p-4 d-flex flex-row">
