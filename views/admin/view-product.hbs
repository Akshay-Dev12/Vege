<section>
  <div class="container">
    <div class="row mt-4">
      <a class="btn btn-success ml-auto" href="/admin/add-pdts">Add prodt</a>
    </div>
    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Price</th>
          <th scope="col">Discription</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row">1</th>
          <td>{{this.Name}}</td>
           <td>{{this.Price}}</td>
          <td>{{this.Dis}}</td>
          <td>
            <img style="width: 50px;height:50px;" src="./pdtImages/{{this._id}}.jpeg" alt="">
          </td>
          <td>
            <a href="/admin/edit-pdt/{{this._id}}" class="btn btn-primary">Edit</a>

          </td>
          <td>
            <a href="/admin/delete-pdt/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are you sure to delete');"> Delete
              </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>